class Solution(object):
    def longestSubarray(self, nums):
        """
        :type nums: List[int]
        :rtype: int
        """
        c=2 #current length
        m=2 #max length
        for i in range(2,len(nums)):
            if(nums[i]== nums[i-1]+nums[i-2]):
                c+=1
                m=max(m,c)
            else:
                c=2
        return m


        
